<% content_for :app do %>

  <!--begin::Root-->
  <div class="d-flex flex-column flex-root" id="kt_app_root">
    <!--begin::Page bg image-->
    <style>body { background-image: url('<%= asset_path('auth/bg-pattern.png') %>'); background-color: #1B044F !important; } [data-bs-theme="dark"] body { background-image: url('<%= asset_path('auth/bg-pattern.png') %>'); background-color: #1B044F !important; }</style>
    <!--end::Page bg image-->
    
    <!--begin::Authentication - Sign-in -->
    <div class="d-flex flex-column flex-column-fluid flex-lg-row">
      <!--begin::Aside-->
      <div class="d-flex flex-center w-lg-50 pt-15 pt-lg-0 px-10">
        <!--begin::Aside-->
        <div class="d-flex flex-center flex-lg-start flex-column">
          <!--begin::Logo-->
          <div class="logo mb-7">
            <img alt="Logo" src="<%= asset_path('logos/logo-firstjob.png') %>" />
          </div>
          <!--end::Logo-->

          <!--begin::Title-->
          <h2 class="text-white fw-normal m-0">Sistema de Estatus para Estudios</h2>
          <!--end::Title-->
        </div>
        <!--begin::Aside-->
      </div>
      <!--begin::Aside-->
     
      <!--begin::Body-->
      <div class="d-flex flex-column-fluid flex-center flex-lg-row-auto justify-content-center justify-content-lg-end p-12 p-lg-20">
        <!--begin::Card-->
        <div class="bg-body d-flex flex-column align-items-stretch flex-center rounded-4 w-md-600px p-20">
          <!--begin::Wrapper-->
          <div class="d-flex flex-center flex-column flex-column-fluid px-lg-10">
            <!--begin::Page-->
            <%= content_for?(:layout) ? yield(:layout) : yield %>
            <!--end::Page-->
          </div>
          <!--end::Wrapper-->
        </div>
        <!--end::Card-->
      </div>
      <!--end::Body-->
    </div>
    <!--end::Authentication - Sign-in-->
  </div>
  <!--end::Root-->

<% end %>

<%= render template: "layout/master" %>