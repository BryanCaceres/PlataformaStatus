<% content_for :title do %>
  Iniciar Sesión
<% end %>

<% content_for :layout do %>

  <!--begin::Form-->
  <form class="form w-100" novalidate="novalidate" id="kt_sign_in_otp_form" action="<%= login_confirm_path %>" method="POST">
    <%= hidden_field_tag :authenticity_token, form_authenticity_token %>

    <!--begin::Heading-->
    <div class="text-center mb-11">
      <!--begin::Title-->
      <h1 class="text-dark fw-bolder mb-3">
        Iniciar sesión
      </h1>
      <!--end::Title-->

      <!--begin::Subtitle-->
      <div class="text-gray-500 fw-semibold fs-6">
        Hemos enviado por email tu código de ingreso. Este estará vigente por 3 minutos. De ser necesario, puedes solicitarlo nuevamente <a href= "<%= login_path %>">aquí</a>.
      </div>
      <!--end::Subtitle--->
    </div>
    <!--begin::Heading-->

    <% if flash[:error].present? %>
      <!--begin::Alert-->
      <div class="alert alert-danger d-flex align-items-center p-2 mb-10">
        <!--begin::Icon-->
        <i class="ki-duotone ki-shield-tick fs-2hx text-danger me-4"><span class="path1"></span><span class="path2"></span></i>                    
        <!--end::Icon-->

        <!--begin::Wrapper-->
        <div class="d-flex flex-column">
          <!--begin::Content-->
          <span><%= flash[:error] %></span>
          <!--end::Content-->
        </div>
        <!--end::Wrapper-->

        <!--begin::Close-->
        <button type="button" class="position-absolute position-sm-relative m-2 m-sm-0 top-0 end-0 btn btn-icon ms-sm-auto" data-bs-dismiss="alert">
          <i class="ki-duotone ki-cross fs-1 text-light"><span class="path1"></span><span class="path2"></span></i>
        </button>
        <!--end::Close-->
      </div>
      <!--end::Alert-->

      <% flash.clear %>
    <% end %>

    <% if flash[:success].present? %>
      <!--begin::Alert-->
      <div class="alert alert-primary d-flex align-items-center p-2 mb-10">
        <!--begin::Icon-->
        <i class="ki-duotone ki-shield-tick fs-2hx text-primary me-4"><span class="path1"></span><span class="path2"></span></i>                    
        <!--end::Icon-->

        <!--begin::Wrapper-->
        <div class="d-flex flex-column">
          <!--begin::Content-->
          <span><%= flash[:success] %></span>
          <!--end::Content-->
        </div>
        <!--end::Wrapper-->

        <!--begin::Close-->
        <button type="button" class="position-absolute position-sm-relative m-2 m-sm-0 top-0 end-0 btn btn-icon ms-sm-auto" data-bs-dismiss="alert">
          <i class="ki-duotone ki-cross fs-1 text-light"><span class="path1"></span><span class="path2"></span></i>
        </button>
        <!--end::Close-->
      </div>
      <!--end::Alert-->

      <% flash.clear %>
    <% end %>

    <!--end::Input group--->
    <div class="fv-row mb-10">
      <!--begin::Password-->
      <input type="password" placeholder="Contraseña" name="otp[password]" autocomplete="off" class="form-control bg-transparent"/>
      <!--end::Password-->
    </div>
    <!--end::Input group--->

    <!--begin::Submit button-->
    <div class="d-grid mb-10">
      <button type="submit" id="kt_sign_in_otp_submit" class="btn btn-purple-custom btn-purple-custom-color">
        <%= render 'partials/general/button-indicator', label: 'Ingresar' %>
      </button>
    </div>
    <!--end::Submit button-->
  </div>
  <!--end::Form-->

<% end %>

<%= render template: "#{Rails.configuration.settings.KT_THEME_LAYOUT_DIR}/auth" %>